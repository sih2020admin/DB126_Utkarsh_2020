<script>
    function send_feedback(){
        var email=document.getElementById("feedback_email").value;
        var suggestion=document.getElementById("feedback_text").value;

        if (email.match(/^[a-zA-Z0-9.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/) === null) {
            return false;
        }if (suggestion === ""){
            return false;
        }
    
        var data = JSON.stringify({"email":email,"suggestion":suggestion});

        var xhr = new XMLHttpRequest();
        xhr.withCredentials = true;

        xhr.onload = function () {
            if (this.status == 200) {
                document.getElementById("feedback_email").value="";
                document.getElementById("feedback_text").value="";
                alert("Thank you");
            } else if (this.status == 400) {
                console.log("400")
            } else {
                console.log("some other error")
            }
        }

        xhr.open("POST", "/feedback");
        xhr.setRequestHeader("Content-Type", "application/json");
        xhr.send(data);
    }
</script>
