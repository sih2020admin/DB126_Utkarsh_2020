<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/css/nav.css">
	<link rel="stylesheet" href="/css/login.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script  src="/javascript/cookies.js"></script>
	<title>Admin dashboard</title>
</head>
<body>
	 <header>
        <nav id='nav_bar'>   
            <a href="v7_homepage.html">Home</a>
            <a href="2CRUD_admin.html">Tender</a>
            <a href="/admin/profile">Profile</a>
            <a href="3view_tender_application.html">Applications</a>
            <a onclick="return theFunctionA();">Log out</a>
        </nav>
    </header>
	{{!-- <div class="cont">
	<h2>Admin Dashboard</h2><br>
	</div> --}}
    <div class="">
        <button id='profile_button'>My Profile</button>
        <button id='approved_button'>Approved Tenders</button>
    </div>
    {{#if admin_details_exists}}
        {{#with admin}}
            <div class='details'>
                <div class="personal_details">
                    <h3>Personal Details</h3>
                    <table>
                        <tr>
                            <td><label for="">Name</label></td>
                            <td><p>{{ad_name}}</p></td>
                        </tr>
                        <tr>
                            <td><label for="">Mobile Number : </label></td>
                            <td><p>{{ad_contact}}</p></td>
                        </tr>
                        <tr>
                            <td><label for="">Email Address : </label></td>
                            <td><p>{{ad_email}}</p></td>
                        </tr>
                        <tr>
                            <td><label for="">Address ; </label></td>
                            <td><p>{{ad_addr}}</p></td>
                        </tr>
                        <tr>
                            <td><label for="">Department</label></td>
                            <td><p>{{dept_name}}</p></td>
                        </tr>
                    </table>
                </div>
                <div class="org_details">
                    <h3>Organization Details</h3>
                    <table>
                        <tr>
                            <td><label for="">Name</label></td>
                            <td><p>{{org_name}}</p></td>
                        </tr>
                        <tr>
                            <td><label for="">Mobile Number</label></td>
                            <td><p>{{org_contact}}</p></td>
                        </tr>
                        <tr>
                            <td><label for="">Email Address</label></td>
                            <td><p>{{org_email}}</p></td>
                        </tr>
                        <tr>
                            <td><label for="">Address</label></td>
                            <td><p>{{org_addr}}</p></td>
                        </tr>
                        <tr>
                            <td><label for="">State</label></td>
                            <td><p>{{org_state}}</p></td>
                        </tr>
                        <tr>
                            <td><label for="">District</label></td>
                            <td><p>{{org_dist}}</p></td>
                        </tr>
                        <tr>
                            <td><label for="">Pincode</label></td>
                            <td><p>{{org_pin}}</p></td>
                        </tr>
                    </table>
                </div>
            </div>
        {{/with}}
    {{else}}
        <h3>Personal Details Does not exist with us</h3>
    {{/if}}
    <div class="approved_tenders" style="display: none;">
        <h3>Approved Tenders</h3>
        {{#each tenders}}
            <h3>Tender Details</h3>
            <div class="tender_details">
                <table>
                    <tr>
                        <td><label for="">Title : </label></td>
                        <td><p>{{et_title}}</p></td>
                    </tr>
                     <tr>
                        <td><label for="">Reference Number : </label></td>
                        <td><p>{{et_tender_ref_no}}</p></td>
                    </tr>
                     <tr>
                        <td><label for="">Description : </label></td>
                        <td><p>{{et_tender_desc}}</p></td>
                    </tr>
                     <tr>
                        <td><label for="">Fee : </label></td>
                        <td><p>{{et_tender_fee}}</p></td>
                    </tr>
                     <tr>
                        <td><label for="">Approval Date : </label></td>
                        <td><p>{{date_of_approval}}</p></td>
                    </tr>
                     <tr>
                        <td><label for="">Bidding Data :</label></td>
                        <td><p>{{et_bidding_date}}</p></td>
                    </tr>
                     <tr>
                        <td><label for="">File URI : </label></td>
                        <td><p>{{et_file_uri}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Technical File :</label></td>
                        <td><a href="{{furi1}}">{{furi1}}</a></td>
                    </tr>
                    <tr>
                        <td><label for="">BOQ FIle : </label></td>
                        <td><a href="{{furi2}}">{{furi2}}</a></td>
                    </tr>
                </table>
            </div>
            <h3>Company Details</h3>
            <div class="vendor_details">
                <table>
                    <tr>
                        <td><label for="">Name : </label></td>
                        <td><p>{{v_name}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Address :</label></td>
                        <td><p>{{v_address}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Year of Establishment :</label></td>
                        <td><p>{{v_yoe}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Email Address :</label></td>
                        <td><p>{{v_email}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Mobile Number :</label></td>
                        <td><p>{{v_mobile}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Registration Number :</label></td>
                        <td><p>{{v_reg_no}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">State :</label></td>
                        <td><p>{{v_state_id}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">District :</label></td>
                        <td><p>{{v_dist_id}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">City :</label></td>
                        <td><p>{{v_city_id}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Pincode :</label></td>
                        <td><p>{{v_pincode}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Legal Status :</label></td>
                        <td><p>{{v_legal_id}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Pan Number :</label></td>
                        <td><p>{{v_pan}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">GST Number :</label></td>
                        <td><p>{{v_gst}}</p></td>
                    </tr>
                </table>
            </div>
            <h3>Contact Details</h3>
            <div class="contact_details">
                <table>
                    <tr>
                        <td><label for="">Name :</label></td>
                        <td><p>{{vcd_name}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Title :</label></td>
                        <td><p>{{vcd_title}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Designation :</label></td>
                        <td><p>{{vcd_designation}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Aadhaar Number :</label></td>
                        <td><p>{{vcd_aadhar}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Mobile Number :</label></td>
                        <td><p>{{vcd_contact}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Email Address :</label></td>
                        <td><p>{{vcd_email}}</p></td>
                    </tr>
                </table>
            </div>
            <h3>Payment Details</h3>
            <div class="payment_details">
                <table>
                    <tr>
                        <td><label for="">Transaction ID :</label></td>
                        <td><p>{{txn_id}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Bank Transaction ID</label></td>
                        <td><p>{{bank_txn_id}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Transaction Status</label></td>
                        <td><p>{{resp_message}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Bank Name : </label></td>
                        <td><p>{{bank_name}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Gateway Name : </label></td>
                        <td><p>{{gateway_name}}</p></td>
                    </tr>
                </table>
            </div>
            <hr>
        {{/each}}
    </div>
</body>
