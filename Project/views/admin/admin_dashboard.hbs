                    </tr>
                    <tr>
                        <td><label for="">Address</label></td>
                        <td><p>{{v_address}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Year of Establishment</label></td>
                        <td><p>{{v_yoe}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Email Address</label></td>
                        <td><p>{{v_email}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Mobile Number</label></td>
                        <td><p>{{v_mobile}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Registration Number</label></td>
                        <td><p>{{v_reg_no}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">State</label></td>
                        <td><p>{{v_state_id}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">District</label></td>
                        <td><p>{{v_dist_id}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">v_city_id</label></td>
                        <td><p>{{v_city_id}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Pincode</label></td>
                        <td><p>{{v_pincode}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Legal Status</label></td>
                        <td><p>{{foo}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Pan Number</label></td>
                        <td><p>{{v_pan}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">GST Number</label></td>
                        <td><p>{{v_gst}}</p></td>
                    </tr>
                </table>
            </div>
            <div class="contact_details">
            <h3>Vendor Contact Details</h3>
                <table>
                    <tr>
                        <td><label for="">Name</label></td>
                        <td><p>{{vcd_name}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Title</label></td>
                        <td><p>{{vcd_title}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Designation</label></td>
                        <td><p>{{vcd_designation}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Aadhaar Number</label></td>
                        <td><p>{{vcd_aadhar}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Mobile Number</label></td>
                        <td><p>{{vcd_contact}}</p></td>
                    </tr>
                    <tr>
                        <td><label for="">Email Address</label></td>
                        <td><p>{{vcd_email}}</p></td>
                    </tr>
                </table>
            </div>
            <div class="document_details">
            <h2>Application Details</h2>
            <h3>Tender Documents</h3>
                <table>
                    <tr>
                        <td><label for="">Technical File</label></td>
                        <td><a href="{{furi1}}">Click Here</a></td>
                    </tr>
                    <tr>
                        <td><label for="">BOQ FIle</label></td>
                        <td><a href="{{furi2}}">Click Here</a></td>
                    </tr>
                </table>
            </div>
            <div class="payment_details">
            <h3>Payment Details</h3>
                <table>
                    <tr>
                        <td><label for="">Transaction ID</label></td>
                        <td><p>{{txn_id}}</p></td>
                    </tr>
